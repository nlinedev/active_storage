<div id="<%= dom_id post %>">
  
  <% if post.banner.attached? %>
    <p>
      <% if action_name == "show" %>
        <%= image_tag post.banner.variant(:high), alt: "post banner" %>
      <% elsif action_name == "index" %>
        <%= image_tag post.banner.variant(:thumb), alt: "post banner" %>
      <% end %>
    </p>
  <% end %>
  
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= post.description %>
  </p>

</div>
